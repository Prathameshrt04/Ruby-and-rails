<!DOCTYPE html>
<html>
<head>
  <title>Smart Connect</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body class="bg-gray-100 text-gray-900">
  <div class="container mx-auto px-4">
    <header class="py-4 flex justify-between items-center bg-white shadow-md rounded-lg px-6">
      <h1 class="text-2xl font-bold">Smart Connect</h1>
      <nav>
        <%= link_to "Home", root_path, class: "px-4 py-2 text-blue-600 hover:text-blue-800" %>
        <% if user_signed_in? %>
          <%= link_to "Dashboard", dashboard_path, class: "px-4 py-2 text-blue-600 hover:text-blue-800" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "px-4 py-2 text-red-600 hover:text-red-800" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "px-4 py-2 text-blue-600 hover:text-blue-800" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "px-4 py-2 text-green-600 hover:text-green-800" %>
        <% end %>
      </nav>
    </header>

    <div class="mt-6">
      <%= yield %>
    </div>
  </div>
</body>
</html>
